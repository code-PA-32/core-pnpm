{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "*/**/*.graphql"]
}
